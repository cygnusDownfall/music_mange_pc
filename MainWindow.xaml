<Window x:Class="music_manage.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:uc="clr-namespace:music_manage"
        mc:Ignorable="d"
        Title="MainWindow" Height="1000" Width="1200"
        >
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="resource\resourcedic.xaml"/>
                <!--     -->
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Grid Style="{StaticResource mainwindow}">
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"></ColumnDefinition>
            <ColumnDefinition Width="5*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <StackPanel Width="auto" Height="auto"   
                    HorizontalAlignment="Stretch"
                    Grid.Column="1">
            <Grid Height="80" Background="SlateGray">
                <Button Style="{StaticResource exitbt}"
                        />
            </Grid>
            <StackPanel Width="700" Height="600" x:Name="playermedia" Visibility="Collapsed">
                <uc:travelmainboard Width="700"
                                    Height="500"/>
                <StackPanel HorizontalAlignment="Center" Orientation="Horizontal" Margin="10,10,10,10">
                    <Button />
                    <Button Width="100" Height="50" />
                    <Button Width="100" Height="50" Click="Button_Click"/>
                    <Button Width="100" Height="50"/>
                    <Button Width="100" Height="50"/>
                </StackPanel>
            </StackPanel>
            <Grid x:Name="listmusicgr"  HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="19*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>
                <ListView x:Name="lvmusic" Style="{StaticResource lvmusic}" >
                    <ListViewItem Style="{StaticResource lvmusicitems}" MouseDoubleClick="Addmusicbt_Click">
                        +  Add Your Music
                    </ListViewItem>
                </ListView>
                <ScrollViewer Grid.Column="1" >

                </ScrollViewer>
            </Grid>


        </StackPanel>
        <Border BorderBrush="Azure" 
                BorderThickness="10" 
                Background="Azure"
                CornerRadius="10" 
                Padding="0,0,0,0"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                Grid.Column="0">
            <StackPanel x:Name="tab" Width="auto"
                        VerticalAlignment="Top"
                        
                        >

                <Button x:Name="MyMusic" Content="My Music" Style="{StaticResource tabbt}" Click="changetotablistmusic"/>
                <Button x:Name="Playing" Content="Playing" Style="{StaticResource tabbt}" Click="changetotablistmusic"/>
                <Button x:Name="Detail" Content="Detail" Style="{StaticResource tabbt}" Click="changetotablistmusic"/>
                <Button x:Name="Lyric" Content="Lyric" Style="{StaticResource tabbt}" Click="changetotablistmusic"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
