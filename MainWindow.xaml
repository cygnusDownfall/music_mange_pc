<Window x:Class="music_manage.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:uc="clr-namespace:music_manage"
        mc:Ignorable="d"
        Title="MainWindow" Height="1000" Width="800"
        WindowStyle="None">
    <Window.Resources>
        <ResourceDictionary Source="resource\resourcedic.xaml">
            
        </ResourceDictionary>
    </Window.Resources>
    <Grid>
        
        <StackPanel Width="800" Height="auto" Background="Black"  HorizontalAlignment="Center">
            <Grid Height="50" Background="GreenYellow">
                <Button Content="X" Width="50" 
                        Height="50" 
                        HorizontalAlignment="Left" 
                        Margin="740,0,0,0" 
                        Click="exit"/>
            </Grid>
            <StackPanel Width="700" Height="600" x:Name="playermedia" Visibility="Collapsed">
                <uc:travelmainboard Width="700"
                                    Height="500"/>
                <StackPanel HorizontalAlignment="Center" Orientation="Horizontal" Margin="10,10,10,10">
                    <Button />
                    <Button Width="100" Height="50"/>
                    <Button Width="100" Height="50" Click="Button_Click"/>
                    <Button Width="100" Height="50"/>
                    <Button Width="100" Height="50"/>
                </StackPanel>
            </StackPanel>
            <StackPanel x:Name="listmusic">
                <ListView x:Name="lvmusic">
                    <ListViewItem FontSize="50" MouseDoubleClick="musiclvclick">
                        test
                    </ListViewItem>
                </ListView>
            </StackPanel>
            <StackPanel x:Name="tab" 
                        HorizontalAlignment="Left"  
                        VerticalAlignment="Center"
                        Margin="50,0,0,0"
                        Orientation="Horizontal"
                        >
                <Button Width="100" Height="50"/>
                <Button Width="100" Height="50" Click="changetotablistmusic"/>
                <Button Width="100" Height="50"/>
                <Button Width="100" Height="50"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
