<Window x:Class="music_manage.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:uc="clr-namespace:music_manage"
        mc:Ignorable="d"
        Title="MainWindow" Height="1000" Width="1000"
        WindowStyle="None">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="resource\resourcedic.xaml"/>

            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>


    </Window.Resources>
    <Grid>

        <StackPanel Width="auto" Height="auto" Background="Black"  HorizontalAlignment="Center">
            <Grid Height="80" Background="GreenYellow">
                <Button Style="{StaticResource exitbt}"
                        Margin="890,0,0,0" 
                        Click="exit" HorizontalAlignment="Left"
                        />
            </Grid>
            <StackPanel Width="700" Height="600" x:Name="playermedia" Visibility="Collapsed">
                <uc:travelmainboard Width="700"
                                    Height="500"/>
                <StackPanel HorizontalAlignment="Center" Orientation="Horizontal" Margin="10,10,10,10">
                    <Button />
                    <Button Width="100" Height="50" />
                    <Button Width="100" Height="50" Click="Button_Click"/>
                    <Button Width="100" Height="50"/>
                    <Button Width="100" Height="50"/>
                </StackPanel>
            </StackPanel>
            <StackPanel x:Name="listmusic" >
                <ListView x:Name="lvmusic" Height="800">
                    <ListViewItem FontSize="50" MouseDoubleClick="musiclvclick">
                        test
                    </ListViewItem>
                </ListView>
            </StackPanel>
            <Border BorderBrush="Azure" BorderThickness="10" CornerRadius="10">
                <StackPanel x:Name="tab" 
                        HorizontalAlignment="Left"  
                        VerticalAlignment="Center"
                        Margin="10,0,10,10"
                        Orientation="Horizontal"
                        >

                    <Button x:Name="Playing" Content="Playing" Style="{StaticResource tabbt}"/>
                    <Button x:Name="MyMusic" Content="My Music" Style="{StaticResource tabbt}" Click="changetotablistmusic"/>
                    <Button x:Name="Detail" Content="Detail" Style="{StaticResource tabbt}"/>
                    <Button x:Name="Lyric" Content="Lyric" Style="{StaticResource tabbt}"/>
                </StackPanel>
            </Border>

        </StackPanel>
    </Grid>
</Window>
